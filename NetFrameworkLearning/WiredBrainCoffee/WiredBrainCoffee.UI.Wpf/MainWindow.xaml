<Window x:Class="WiredBrainCoffee.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiredBrainCoffee.UI.Wpf"
        mc:Ignorable="d"
        Title="Wired Brain Coffee" FontSize="20" Height="450" Width="800">
	<StackPanel Margin="10">
		<TextBlock Text="Capuchino counter:" Margin="5" />
		<TextBox x:Name="txtCapuchinoCounter" IsReadOnly="True" Margin="5" />
		<Button Content="Make Capuchino" Click="BtnMakeCapuchinoClicked" HorizontalAlignment="Left" Width="200" Margin="5" />
	</StackPanel>
</Window>